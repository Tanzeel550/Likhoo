<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane fx:controller="sample.Controller" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:id="borderPane">
   <top>
      <MenuBar>
         <Menu text="File">
            <MenuItem text="New" fx:id="newMenu" />
            <MenuItem text="Open" fx:id="openMenu" onAction="#openMenuAction"/>
            <MenuItem text="Save" fx:id="saveMenu" onAction="#saveMenuAction"/>
            <MenuItem text="Save As" fx:id="saveAsMenu" onAction="#saveAsMenuAction"/>
            <SeparatorMenuItem/>
            <MenuItem text="Exit" fx:id="exitMenu" onAction="#exitMenuAction"/>
         </Menu>

         <Menu text="Edit">
            <MenuItem text="Undo" fx:id="undoMenu"/>
            <MenuItem text="Redo" fx:id="redoMenu"/>
            <SeparatorMenuItem/>
            <MenuItem text="Cut" fx:id="cutMenu"/>
            <MenuItem text="Paste" fx:id="pasteMenu"/>
            <MenuItem text="Copy" fx:id="copyMenu"/>
            <MenuItem text="Delete" fx:id="deleteMenu"/>
            <SeparatorMenuItem/>
            <MenuItem text="Find" fx:id="findMenu"/>
            <MenuItem text="Replace" fx:id="replaceMenu"/>
            <MenuItem text="Go To" fx:id="goToMenu"/> <!-- This menu is enabled only when word wrap is disabled-->
            <SeparatorMenuItem/>
            <MenuItem text="Select All" fx:id="selectAllMenu"/>
         </Menu>

         <Menu text="Format">
            <MenuItem text="Word Wrap" fx:id="wordWrapMenu"/>
            <MenuItem text="Font" fx:id="fontMenu"/>
         </Menu>

         <Menu text="View">
            <MenuItem text="Status Bar" fx:id="statusBarMenu"/>
         </Menu>

         <Menu text="Help" >
            <MenuItem text="About" fx:id="aboutMenu"/>
            <MenuItem text="What is it?" fx:id="whatIsItMenu" />
         </Menu>

      </MenuBar>
   </top>
   <center>
      <TextArea fx:id="textarea" BorderPane.alignment="CENTER" onInputMethodTextChanged="#textAreaTextChanged"/>
   </center>
</BorderPane>
